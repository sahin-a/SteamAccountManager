<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:SteamAccountManager.AvaloniaUI.Views">

    <StyleInclude Source="/SteamAccountSwitcherStyles.xaml" />

    <Design.PreviewWith>
        <controls:RoundedContainer>
            <TextBlock Text="Hallo Peter" />
        </controls:RoundedContainer>
    </Design.PreviewWith>

    <Style Selector="controls|RoundedContainer">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>

                <Grid ColumnDefinitions="*" RowDefinitions="*" Background="Red">
                    <Panel>
                        <ExperimentalAcrylicBorder IsHitTestVisible="False">
                            <ExperimentalAcrylicBorder.Material>
                                <ExperimentalAcrylicMaterial
                                    BackgroundSource="None"
                                    TintColor="Red"
                                    TintOpacity="1"
                                    MaterialOpacity="0.75" />
                            </ExperimentalAcrylicBorder.Material>
                        </ExperimentalAcrylicBorder>

                        <ContentPresenter Content="{TemplateBinding Content}" />
                    </Panel>
                </Grid>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>