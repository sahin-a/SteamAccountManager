<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="using:SteamAccountManager.AvaloniaUI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SteamAccountManager.AvaloniaUI.Views.AccountSwitcher">

	<ListBox Items="{Binding Accounts}" SelectionMode="Single" SelectionChanged="AccountSelection_SelectionChanged">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<StackPanel Orientation="Horizontal">
					<!-- Profile Picture TODO: Set Placeholder Image -->
					<Image Height="37" Width="37" Margin="8, 8, 8, 8" />
					<!-- Account Details -->
					<TextBlock Text="{Binding Name}" VerticalAlignment="Top" Margin="0, 4, 8, 4" />
				</StackPanel>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>
	
</UserControl>
